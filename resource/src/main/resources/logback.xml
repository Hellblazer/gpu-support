<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for general logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File appender for resource tracking -->
    <appender name="RESOURCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/resource-tracking.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/resource-tracking.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{ISO8601} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Async appender for performance -->
    <appender name="ASYNC_RESOURCE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="RESOURCE_FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>
    
    <!-- Logger for resource tracking -->
    <logger name="com.hellblazer.luciferase.resource" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_RESOURCE"/>
    </logger>
    
    <!-- Specific logger for leak detection -->
    <logger name="com.hellblazer.luciferase.resource.ResourceTracker" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_RESOURCE"/>
    </logger>
    
    <!-- Logger for memory operations -->
    <logger name="com.hellblazer.luciferase.resource.memory" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_RESOURCE"/>
    </logger>
    
    <!-- Logger for GPU operations -->
    <logger name="com.hellblazer.luciferase.resource.gpu" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_RESOURCE"/>
    </logger>
    
    <!-- Logger for OpenCL operations -->
    <logger name="com.hellblazer.luciferase.resource.opencl" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_RESOURCE"/>
    </logger>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
